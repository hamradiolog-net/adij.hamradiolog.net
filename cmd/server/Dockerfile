# Stage: Build
FROM golang:1.25-alpine AS builder
WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download
COPY . .

RUN CGO_ENABLED=0 go build -o server -ldflags="-s -w" -trimpath ./cmd/server

# Stage: Build Production Container
FROM alpine:latest
WORKDIR /app
COPY --from=builder /app/server .
EXPOSE 8080
ENTRYPOINT ["./server"]
CMD ["-addr", "0.0.0.0:8080"]